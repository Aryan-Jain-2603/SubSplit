<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg p-4 text-center">
          <!-- Profile Picture -->
          <img
            src="https://randomuser.me/api/portraits/men/1.jpg"
            alt="Profile Picture"
            class="rounded-circle mb-3"
            width="150"
            height="150"
          />

          <h3 class="mb-2"><%= curUser.username %></h3>
          <p class="text-muted"><%= curUser.email %></p>

          <hr />

          <!-- Bio -->
          <p><strong>Bio:</strong> Passionate about web development and AI. Loves traveling and photography.</p>

          <!-- Location -->
          <p><strong>Location:</strong> Bangalore, India</p>

          <!-- Edit Button -->
          <a href="/profile/edit" class="btn btn-dark w-100 mt-3">Edit Profile</a>
        </div>
      </div>
    </div>
  </div>
</body>
