<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg p-4 text-center">
          <!-- Profile Picture -->
          <img
            src="https://randomuser.me/api/portraits/men/1.jpg"
            alt="Profile Picture"
            class="rounded-circle mb-3"
            width="150"
            height="150"
          />

          <h3 class="mb-2"><%= curUser.username %></h3>
          <p class="text-muted"><%= curUser.email %></p>

          <hr />

          <!-- Bio -->
          <p><strong>Wallet Money:</strong> <%=currUser.money%></p>
          <!-- Add Money Button -->
          <button class="btn btn-primary mt-3" id="addMoneyBtn">
            Add Money
          </button>

          <!-- Hidden Money Input Form -->
          <form
            id="moneyForm"
            class="mt-3"
            action="/add-money"
            method="POST"
            style="display: none"
          >
            <div class="input-group">
              <input
                type="number"
                class="form-control"
                name="amount"
                id="moneyInput"
                placeholder="Enter amount"
                required
                min="1"
              />
              <button type="submit" class="btn btn-success">Add</button>
            </div>
          </form>

          <script>
            document
              .getElementById("addMoneyBtn")
              .addEventListener("click", function () {
                document.getElementById("moneyForm").style.display = "block";
                this.style.display = "none";
              });
          </script>

          <!-- Location -->
          <p><strong>Location:</strong> Bangalore, India</p>

          <!-- Edit Button -->
          <a href="/profile/edit" class="btn btn-dark w-100 mt-3"
            >Edit Profile</a
          >
        </div>
      </div>
    </div>
  </div>
</body>
