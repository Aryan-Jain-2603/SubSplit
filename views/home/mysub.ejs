<%= layout('/layouts/boilerplate') %>

<style>
  .card-img-top {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
  }
  
  .dashboard-header {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    padding: 2.5rem 0;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
  }
  
  .section-toggle {
    background-color: #6366f1;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.2s ease;
  }
  
  .section-toggle:hover {
    background-color: #4f46e5;
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .subscription-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 12px;
    overflow: hidden;
    border: none;
  }
  
  .subscription-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
  
  .action-btn {
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .edit-btn {
    background-color: #10b981;
    border-color: #10b981;
    color: white;
  }
  
  .edit-btn:hover {
    background-color: #059669;
    border-color: #059669;
    color: white;
  }
  
  .delete-btn {
    background-color: #f59e0b;
    border-color: #f59e0b;
    color: white;
  }
  
  .delete-btn:hover {
    background-color: #d97706;
    border-color: #d97706;
    color: white;
  }
  
  .credential-btn {
    background-color: white;
    border: 2px solid #10b981;
    color: #10b981;
  }
  
  .credential-btn:hover {
    background-color: #10b981;
    color: white;
  }
  
  .section-card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }
  
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #4f46e5;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.75rem;
  }
  
  .card-label {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
  }
  
  .card-value {
    font-weight: 600;
    margin-bottom: 1rem;
    color: #1f2937;
  }
  
  .info-badge {
    padding: 0.35rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .credentials-container {
    background-color: #f9fafb;
    border-radius: 8px;
    padding: 0.75rem;
    margin-bottom: 1rem;
  }
  
  .card-footer {
    background-color: #f9fafb;
    border-top: 1px solid #e5e7eb;
    padding: 0.75rem 1rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
  }
  
  .empty-icon {
    font-size: 3rem;
    color: #d1d5db;
    margin-bottom: 1rem;
  }
</style>

<div class="container py-4">
  <!-- Dashboard Header -->
  <div class="dashboard-header text-center shadow mb-4">
    <h1 class="display-6 fw-bold mb-3">My Subscription Dashboard</h1>
    <p class="lead">Manage your subscription plans and view your joined subscriptions</p>
  </div>

  <!-- My Plans Section Button -->
  <div class="d-flex justify-content-center mb-4">
    <button
      class="btn section-toggle shadow-sm"
      data-bs-toggle="collapse"
      data-bs-target="#multiCollapseExample1"
      aria-expanded="false"
      aria-controls="multiCollapseExample1"
    >
      <i class="bi bi-collection me-2"></i> My Hosted Plans
    </button>
  </div>

  <!-- My Plans Section -->
  <div class="collapse mb-5" id="multiCollapseExample1">
    <div class="card section-card">
      <div class="card-body p-4">
        <h2 class="section-title">
          <i class="bi bi-person-circle me-2"></i> Plans I'm Hosting
        </h2>
        
        <% if(myPlans.length === 0) { %>
          <div class="empty-state">
            <i class="bi bi-ui-checks empty-icon"></i>
            <h4>No Plans Created Yet</h4>
            <p class="text-muted">You haven't created any subscription plans yet.</p>
            <a href="/newsub" class="btn section-toggle mt-2">
              <i class="bi bi-plus-circle me-2"></i> Create New Plan
            </a>
          </div>
        <% } else { %>
          <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(let plan of myPlans) { %>
            <div class="col">
              <div class="card h-100 subscription-card shadow-sm">
                <!-- Subscription Image -->
                <img
                  src="<%= plan.image %>"
                  class="card-img-top"
                  alt="<%= plan.name %>"
                />

                <div class="card-body p-4">
                  <h5 class="fw-bold mb-3 text-primary"><%= plan.name %></h5>
                  
                  <div class="d-flex justify-content-between mb-2">
                    <span class="card-label">Available Slots:</span>
                    <span class="badge bg-dark info-badge">
                      <i class="bi bi-people-fill me-1"></i> <%= plan.slots %>
                    </span>
                  </div>
                  
                  <div class="d-flex justify-content-between mb-2">
                    <span class="card-label">Type:</span>
                    <span class="badge bg-primary info-badge">
                      <i class="bi bi-tag-fill me-1"></i> <%= plan.type %>
                    </span>
                  </div>
                  
                  <div class="d-flex justify-content-between mb-3">
                    <span class="card-label">Price per Slot:</span>
                    <span class="badge bg-success info-badge">
                      <i class="bi bi-currency-rupee me-1"></i> <%= plan.price %>/month
                    </span>
                  </div>

                  <div class="row g-2 mt-2">
                    <div class="col-6">
                      <a
                        href="/mysub/<%= plan._id %>"
                        class="btn edit-btn action-btn w-100"
                      >
                        <i class="bi bi-pencil-square me-1"></i> Edit
                      </a>
                    </div>
                    <div class="col-6">
                      <form action="/mysub/<%= plan._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn delete-btn action-btn w-100">
                          <i class="bi bi-trash me-1"></i> Delete
                        </button>
                      </form>
                    </div>
                  </div>
                </div>

                <div class="card-footer">
                  <small class="text-muted">
                    <i class="bi bi-calendar-event me-1"></i> Expires on:
                    <strong>
                      <%= new Date(plan.expDate).toLocaleDateString("en-IN", {
                      day: 'numeric', month: 'long', year: 'numeric' }) %>
                    </strong>
                  </small>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Joined Plans Section Button -->
  <div class="d-flex justify-content-center mb-4">
    <button
      class="btn section-toggle shadow-sm"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#multiCollapseExample2"
      aria-expanded="false"
      aria-controls="multiCollapseExample2"
    >
      <i class="bi bi-bookmark-check me-2"></i> Plans I've Joined
    </button>
  </div>

  <!-- Joined Plans Section -->
  <div class="collapse mb-4" id="multiCollapseExample2">
    <div class="card section-card">
      <div class="card-body p-4">
        <h2 class="section-title">
          <i class="bi bi-person-check me-2"></i> Plans I'm Subscribed To
        </h2>
        
        <% if(joinedPlans.length === 0) { %>
          <div class="empty-state">
            <i class="bi bi-bookmark empty-icon"></i>
            <h4>No Joined Plans</h4>
            <p class="text-muted">You haven't joined any subscription plans yet.</p>
            <a href="/" class="btn section-toggle mt-2">
              <i class="bi bi-search me-2"></i> Browse Available Plans
            </a>
          </div>
        <% } else { %>
          <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(let plan of joinedPlans) { %>
              <div class="col">
                <div class="card h-100 subscription-card shadow-sm">
                  <img
                    src="<%= plan.image %>"
                    class="card-img-top"
                    alt="<%= plan.name %>"
                  />
    
                  <div class="card-body p-4">
                    <h5 class="fw-bold mb-3 text-primary"><%= plan.name %></h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                      <span class="card-label">Available Slots:</span>
                      <span class="badge bg-dark info-badge">
                        <i class="bi bi-people-fill me-1"></i> <%= plan.slots %>
                      </span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-2">
                      <span class="card-label">Type:</span>
                      <span class="badge bg-primary info-badge">
                        <i class="bi bi-tag-fill me-1"></i> <%= plan.type %>
                      </span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                      <span class="card-label">Price per Slot:</span>
                      <span class="badge bg-success info-badge">
                        <i class="bi bi-currency-rupee me-1"></i> <%= plan.price %>/month
                      </span>
                    </div>
                    
                    <div class="credentials-container mb-3">
                      <div class="mb-2">
                        <span class="card-label">
                          <i class="bi bi-envelope me-1"></i> Email:
                        </span>
                        <span class="fw-medium" id="email-<%= plan._id %>">*********</span>
                      </div>
                      <div>
                        <span class="card-label">
                          <i class="bi bi-key me-1"></i> Password:
                        </span>
                        <span class="fw-medium" id="password-<%= plan._id %>">*********</span>
                      </div>
                    </div>
    
                    <button type="button" class="btn credential-btn w-100"
                      onclick="toggleCredentials('<%= plan._id %>', '<%= plan.email %>', '<%= plan.password %>')">
                      <i class="bi bi-eye me-2"></i> Show Credentials
                    </button>
                  </div>
    
                  <div class="card-footer">
                    <small class="text-muted">
                      <i class="bi bi-calendar-event me-1"></i> Expires on:
                      <strong>
                        <%= new Date(plan.expDate).toLocaleDateString("en-IN", {
                        day: 'numeric', month: 'long', year: 'numeric' }) %>
                      </strong>
                    </small>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Action Buttons -->
  <!-- <div class="d-flex justify-content-center gap-3 mt-4">
    <a href="/mysub/new" class="btn section-toggle">
      <i class="bi bi-plus-circle me-2"></i> Create New Plan
    </a>
    <a href="/" class="btn btn-outline-primary">
      <i class="bi bi-house me-2"></i> Back to Home
    </a>
  </div>
</div> -->

<script>
  function toggleCredentials(planId, email, password) {
    const emailField = document.getElementById(`email-${planId}`);
    const passwordField = document.getElementById(`password-${planId}`);
    const button = event.currentTarget;

    if (emailField.innerText === "*********") {
      emailField.innerText = email;
      passwordField.innerText = password;
      button.innerHTML = '<i class="bi bi-eye-slash me-2"></i> Hide Credentials';
    } else {
      emailField.innerText = "*********";
      passwordField.innerText = "*********";
      button.innerHTML = '<i class="bi bi-eye me-2"></i> Show Credentials';
    }
  }
</script>